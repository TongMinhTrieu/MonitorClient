{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "SQLMonitor": {
    "ConnectionStrings": "Server=TMT;User Id=sa;Password=tuantv;Trusted_Connection=True;MultipleActiveResultSets=true;TrustServerCertificate=True;Pooling=true;Min Pool Size=5;Max Pool Size=100;",
    "TestQuery": "SELECT TOP 5000 * FROM sys.objects ORDER BY create_date DESC;",
    "CheckIntervalMinutes": 10,
    "MaxRetryAttempts": 5,
    "PeakHours": [
      {
        "Start": "07:00",
        "End": "08:00"
      },
      {
        "Start": "12:00",
        "End": "13:30"
      },
      {
        "Start": "16:00",
        "End": "17:00"
      }
    ]
  },  
  "AllowedHosts": "*",
  "WebSocket": {
    //"Url": "http://localhost", //http
    //"Port": "5081"
    "Url": "https://monitor.adgps.vn", //https
    "Port": "9119"

  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information", // Mức độ log mặc định là Information
      "Override": {
        "Microsoft": "Error", // Loại bỏ log từ Microsoft với mức độ thấp hơn Error
        "System": "Error" // Loại bỏ log từ System với mức độ thấp hơn Error
      }
    }
  },
  "Time": {
    "period": 5000, //milisecond
    "reconnect": 5000 //milisecond
  },
  "Adapter": {
    //"Name": "Adapter for loopback traffic capture"
    "Name": "Intel(R) Wi-Fi 6 AX200 160MHz"
  }
}
